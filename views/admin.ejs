<!doctype html>
<html lang="en">
	<head>
		<title>admin of the invitees</title>
		<link rel="stylesheet" type="text/css" href="bootstrap.min.css">
		
		<script type="text/javascript" src="jquery.min.js"></script>
		<script type="text/javascript" src="bootstrap.min.js"></script>
	</head>
	<body>
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<h3>You have loged in as: <strong><%= user %></strong></h3> 
					<input type="button" onclick="location.href ='/logout'" value="Logout">
				</div>
				<div class="col-md-12">
					<h2>Current invitees: <%= invitees.length %></h2>
					<!--TODO: a list of the current invitees, support delete -->
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th>Lastname</th>
								<th>Firstname</th>
								<th>Language</th>
								<th>Activity</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% for(var i=0; i<invitees.length; i++) { %>
								<tr>
									<td><%= invitees[i].lastname %></td>
									<td><%= invitees[i].firstname %></td>
									<td><%= invitees[i].lang %></td>
									<td><%= invitees[i].actType %></td>
									<td><input type="button" onclick="location.href ='/removeInvitee/?id=<%= invitees[i]._id%>'" value="Delete"></td>
								</tr>
							<% } %>
						</tbody>
					</table>
				</div>
				<div class="col-md-12">
					<!--TODO: a form to add a new invitee -->
					<h2>Add a new invitee:</h2>
					<form method="post" action="/addInvitee">
						First name:	<input type="text" name="firstname" required>
						<br>
						Last name:	<input type="text" name="lastname" required>
						<br>
						Language: 
						<select name="lang" required>
							<option value="FR">Français</option>
							<option value="ZH">中文</option>
							<option value="EN">English</option>
						</select>
						<br>
						Activity to attend:
						<select name="actType" required>
							<option value="dinner">Dinner</option>
							<option value="barbecue">Barbecue</option>
						</select>
						<br><br>
						<input type="submit" value="Submit">
						<input type="reset" value="Reset">
					</form>
				</div>
			</div>
		</div>
	</body>
</html>

