	<script type="text/javascript">
		$(document).ready(function() {
			var langBtns = ['selectZH', 'selectFR','selectEN'];
			var langClasses = ['langZH', 'langFR', 'langEN'];
			var langTitles = ['静浩之恋', 'Caesar&Serene','Jing and Hao'];
			function selectLanguage(selectLang){
				
				$('#'+selectLang).show();
				for (i = 0; i < langBtns.length; i++){
					if (langBtns[i] == selectLang){
						$('#'+langBtns[i]).removeClass('label-default');
						$('#'+langBtns[i]).addClass('label-primary');
						$('.'+langClasses[i]).removeClass('hide');
						// also change the title
						document.title = langTitles[i];
					}
					else{
						$('#'+langBtns[i]).removeClass('label-primary');
						$('#'+langBtns[i]).addClass('label-default');
						$('.'+langClasses[i]).addClass('hide');
					}
					$('#'+langBtns[i]).show();
					$('.'+langClasses[i]).show();
				}
			}
			
			$('.selectLanguageItem').click(function(){
				selectLanguage($(this).attr('id'));
			});
			// francais par defaut
			selectLanguage('selectZH');
		});
	</script>
